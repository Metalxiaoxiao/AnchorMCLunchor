{
  "name": "anchormclunchor-root",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm --prefix anchorMCLuncher/backend run dev",
    "start:frontend": "npm --prefix anchorMCLuncher/frontend run tauri dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --prefix anchorMCLuncher/backend run build",
    "build:frontend": "npm --prefix anchorMCLuncher/frontend run tauri build"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
